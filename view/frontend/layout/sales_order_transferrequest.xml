<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Transfer Order Requests</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magezon\TransferOrder\Block\Sales\Order\Transfer\Request" name="order_transfer_request" template="Magezon_TransferOrder::sales/order/transfer/request.phtml" />
        </referenceContainer>
    </body>
</page>